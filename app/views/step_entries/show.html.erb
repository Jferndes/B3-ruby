<div class="container mx-auto max-w-3xl p-6 bg-white shadow-md rounded-lg">
  <h1 class="text-2xl font-bold text-gray-800 mb-6">Détails du suivi de pas</h1>

  <div class="step-entry-details space-y-4">
    <div class="flex items-center">
      <span class="text-gray-600 font-medium w-24">Pas :</span>
      <span class="text-gray-900 text-lg"><%= number_with_delimiter(@step_entry.steps) %></span>
    </div>
    <div class="flex items-center">
      <span class="text-gray-600 font-medium w-24">Date :</span>
      <span class="text-gray-900 text-lg"><%= @step_entry.date.strftime('%d/%m/%Y') %></span>
    </div>
  </div>

  <div class="actions mt-8 flex space-x-4">
    <%= link_to 'Modifier', edit_step_entry_path(@step_entry), 
                class: 'bg-blue-500 text-white px-4 py-2 rounded hover:bg-blue-600' %>
    <%= button_to 'Supprimer', step_entry_path(@step_entry), 
                method: :delete, 
                data: { turbo_confirm: 'Êtes-vous sûr de vouloir supprimer cette entrée ?' }, 
                class: 'bg-red-500 text-white px-4 py-2 rounded hover:bg-red-600' %>
    <%= link_to 'Retour à la liste', step_entries_path, 
                class: 'bg-gray-500 text-white px-4 py-2 rounded hover:bg-gray-600' %>
  </div>
</div>