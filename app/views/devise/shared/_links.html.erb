  <!-- Conteneur principal -->
  <div class="flex flex-col space-y-4 mt-4">

    <!-- Mot de passe oublié -->
    <%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
      <div class="text-center">
        <%= link_to "Mot de passe oublié ?", new_password_path(resource_name), 
            class: "text-sm text-blue-600 hover:text-blue-800 hover:underline" %>
      </div>
    <% end %>

    <!-- Séparateur -->
    <div class="relative flex items-center justify-center mt-2 mb-2">
      <div class="border-t border-gray-300 absolute w-full"></div>
      <span class="bg-white px-3 text-gray-500 text-sm relative">ou</span>
    </div>

    <!-- Connexion -->
    <%- if controller_name != 'sessions' %>
      <div class="w-full">
        <%= link_to "Se connecter", new_session_path(resource_name), 
            class: "w-full block text-center py-2 px-4 border border-teal-600 text-teal-600 hover:bg-teal-50 font-semibold rounded-md transition-colors" %>
      </div>
    <% end %>

    <!-- Inscription -->
    <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
      <div class="w-full">
        <%= link_to "S'inscrire", new_registration_path(resource_name), 
            class: "w-full block text-center py-2 px-4 border border-teal-600 text-teal-600 hover:bg-teal-50 font-semibold rounded-md transition-colors" %>
      </div>
    <% end %>

    <!-- Connexion OAuth (Google) -->
    <%- if devise_mapping.omniauthable? %>
      <%- resource_class.omniauth_providers.each do |provider| %>
        <div class="w-full">
          <%= button_to user_google_oauth2_omniauth_authorize_path, 
              method: :post, 
              data: {turbo: "false"},
              class: "w-full flex items-center justify-center py-2 px-4 bg-white hover:bg-gray-50 text-gray-800 font-medium border border-gray-300 rounded-md shadow-sm transition-colors" do %>
            <!-- Icône Google -->
            <%= image_tag "Google__logo.svg", class: "w-5 h-5 mr-2", alt: "Google logo" %>
            Se connecter avec Google
          <% end %>
        </div>
      <% end %>
    <% end %>

    <!-- Liens utilitaires additionnels -->
    <div class="space-y-2 mt-2 text-center text-xs text-gray-500">
      <%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
        <div>
          <%= link_to "Instructions de confirmation non reçues ?", new_confirmation_path(resource_name), 
              class: "hover:text-gray-700 hover:underline" %>
        </div>
      <% end %>

      <%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
        <div>
          <%= link_to "Instructions de déverrouillage non reçues ?", new_unlock_path(resource_name), 
              class: "hover:text-gray-700 hover:underline" %>
        </div>
      <% end %>
    </div>
  </div>